<UserControl x:Class="CaptureBody.KinectViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaptureBody"
             mc:Ignorable="d" 
             d:DesignHeight="1080"
             d:DesignWidth="1920">

    <Grid x:Name="root" Margin="0,0,0,0">

        <Grid Margin="0,1120,0,0" Background="Black">
            <Canvas Background="Black" Name="Skeleton" />
        </Grid>

        <Grid Margin="0,0,0,500">
            <Image Name="Camera" Source="{Binding Image}"/>
        </Grid>
    </Grid>
</UserControl>
