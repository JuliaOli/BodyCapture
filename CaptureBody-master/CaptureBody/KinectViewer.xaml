<UserControl x:Class="CaptureBody.KinectViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaptureBody"
             mc:Ignorable="d" 
             d:DesignHeight="1080"
             d:DesignWidth="1920">
    
    <Grid x:Name="root">

        <Grid Margin="0,0,0,540">
            <Image Name="Camera" Source="{Binding Image}"/>
        </Grid>


        <Grid Margin="0,540, 0, 0">
            <Canvas Background="Transparent" Name="Skeleton" />
        </Grid>
        
    </Grid>
</UserControl>
