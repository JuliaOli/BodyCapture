<UserControl x:Class="CaptureBody.KinectViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CaptureBody"
             mc:Ignorable="d" 
             d:DesignHeight="1080"
             d:DesignWidth="1920">
    
    <Grid x:Name="root" Background="Black">

            <Viewbox Margin="0,0,980,540">
                <Image Name="Camera" Source="{Binding Image}"/>
            </Viewbox>

            <Viewbox Margin="980,540,0,0">
                <Ellipse x:Name="Circle1" Fill="Green" Height="5" Width="5"></Ellipse>
            </Viewbox>

        <Viewbox Margin="980,0,0,540">

            <Ellipse x:Name="Circle2" Fill="Yellow" Height="5" Width="5"></Ellipse>

        </Viewbox>

        <Viewbox Margin="0,540,980,0">
            <Canvas Name="Skeleton">

            </Canvas>
        </Viewbox>

    </Grid>
</UserControl>
